        </ray>
        <plugin name="{{ sensor_name }}_lidar_plugin" filename="{{ ouster_plugin_filename }}">
          <parentFrameName>{{ frame_fcu }}</parentFrameName>
          <sensorFrameName>{{ frame_sensor }}</sensorFrameName>
