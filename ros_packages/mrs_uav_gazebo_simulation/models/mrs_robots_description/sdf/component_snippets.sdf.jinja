    {%- set lidar_x = 0 -%}
    {%- set lidar_y = 0 -%}
    {%- set lidar_z = 0.0344 -%}
    {%- set lidar_roll = 0 -%}
    {%- set lidar_pitch = 0 -%}
    {%- set lidar_yaw = 0 -%}

    {# -- tf from sensor to imu -- #}
    {%- set imu_x = 0.006253 -%}
    {%- set imu_y = -0.011775 -%}
    {%- set imu_z = 0.007645 -%}
    {%- set imu_roll = 0 -%}
