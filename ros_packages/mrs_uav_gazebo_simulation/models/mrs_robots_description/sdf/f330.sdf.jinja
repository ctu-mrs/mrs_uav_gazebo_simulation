    }}
    <!--}-->
    {% endif %}

    <!--}-->

    <!-- VIO placements {-->

    {% if enable_vio %}
    <!-- VIO classic {-->
    {{ components.vio_macro(
      namespace = namespace,
      sensor_name = "vio",
      parent_link = root,
      frame_rate = 45,
      noise = 0.0,
      imu_rate = 125,
      imu_noise_mean = 0.0,
      x = 0.107,
